# API Keys (if needed for future integrations)
# PHANTOM_API_KEY=your-phantom-api-key
# SOLANA_RPC_URL=https://api.devnet.solana.com

# Security
CORS_ORIGIN=http://localhost:5000

# Logging
LOG_LEVEL=info